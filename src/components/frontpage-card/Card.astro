---
import type { ImageMetadata } from "astro"
import { Image } from "astro:assets"
import Link from "../link/Link.astro"
export interface Props {
    href: string
    text: string
    image: ImageMetadata
}

const { href, text, image } = Astro.props
---

<Link href={href}>
    <Image src={image} alt={text} loading={"eager"} />
    <div class="text-div">
        <h3>{text}</h3>
    </div>
</Link>

<style>
    a {
        height: 70vh;
        width: 100%;
        overflow: hidden;
        text-align: center;
        position: relative;
    }

    img {
        width: 100%;
        height: 100%;
        object-position: 50% 50%;
        object-fit: cover;
    }

    div {
        display: flex;
        position: absolute;

        top: 0;
        bottom: 0;
        left: 0;
        right: 0;

        text-align: center;
        align-content: center;
        justify-content: center;
        flex-direction: column;
    }

    h3 {
        /* position: static; */
        font-family: merriweather;
        font-size: 1.6em;
        color: black;
        font-weight: 200;
    }
</style>
