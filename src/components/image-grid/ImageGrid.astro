---
export interface Props {
    class?: string[]
}

const { class: className = "" } = Astro.props
---

<div class="grid" data-colcade="columns: .grid-col, items: .grid-item">
    <div class="grid-col grid-col--1"></div>
    <div class="grid-col grid-col--2"></div>
    <div class="grid-col grid-col--3"></div>
    <slot class={"grid-item " + className} />
</div>
<script src="./colcade.js"></script>

<style lang="scss">
    @import "../../styles/variables.scss";
    img {
        min-width: 100px;
        min-height: 100px;
        width: 100%;
        height: 100%;
    }

    .grid {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        gap: 32px;

        .grid-col {
            -webkit-box-flex: 1;
            -webkit-flex-grow: 1;
            -ms-flex-positive: 1;
            flex-grow: 1;
            /* flex-shrink: 1; */
            /* gap: 32px; */
            /* width: 50%; */
            width: 33%;
        }

        .grid-col--2 {
            display: none;
            @media (min-width: $breakWidth) {
                display: block;
            }
        }
        .grid-item {
            overflow: hidden;
            padding-bottom: 16px;
        }
    }
</style>
