---
import "../../styles/variables.scss"
export interface Props {
    text: string
}

const { text } = Astro.props
---

<a href="/">{text}</a>

<style lang="scss">
    @import "../../styles/variables.scss";
    a {
        color: $navbarLogoColor;
        text-decoration: none;
        font-family: merriweather;
        font-size: 2.5em;

        /* padding-left: 32px; */
        /* padding-top: 32px; */
        padding-bottom: 32px;
    }
    @media screen and (max-width: 600px) {
        a {
            margin-right: 4rem;
        }
    }
</style>
