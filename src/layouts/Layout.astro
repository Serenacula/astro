---
import "@fontsource/merriweather"
import NavigationBar from "../components/navbar/NavigationBar.astro"
import Logo from "../components/navbar/Logo.astro"
import NavItem from "../components/navbar/NavItem.astro"
import "../styles/variables.scss"

export interface Props {
    title: string
}

const { title } = Astro.props

const fullTitle = title
    ? `${title} | Saffron Murray-Browne`
    : `Saffron Murray-Browne`
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{fullTitle}</title>
    </head>
    <body>
        <NavigationBar>
            <Logo slot="Logo" text="Saffron Murray-Browne" />
            <NavItem
                slot="NavItem"
                href="/"
                text="Portfolio"
                additionalUnderlinePaths={[
                    "/portfolio/paintings",
                    "/portfolio/drawings",
                ]}
            />
            <NavItem slot="NavItem" href="/about" text="About" />
            <NavItem slot="NavItem" href="/shop" text="Shop" />
        </NavigationBar>
        <slot />
    </body>
</html>

<style is:global lang="scss">
    @import "../styles/variables.scss";

    // window {
    //     overflow-x: hidden;
    //     margin: 0;
    //     padding: 0;
    // }

    html,
    body {
        width: 100%;
        // height: 100%;
        /* box-sizing: content-box; */
        margin: 0;
        padding: 0;
        font-family: merriweather, arial;
        line-height: 2.2rem;
        overflow-x: hidden;
    }
    body {
        width: 100%;
        box-sizing: border-box;
        // height: 100%;
        // margin: 0;
        padding: 0 48px 48px;

        @media (max-width: $breakWidth) {
            padding: 32px;
        }
    }

    a {
        color: $linkColor;
    }

    /* My CSS */
</style>
