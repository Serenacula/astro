---
import "@fontsource/merriweather"
import NavigationBar from "../components/navbar/NavigationBar.astro"
import Logo from "../components/navbar/Logo.astro"
import NavItem from "../components/navbar/NavItem.astro"

export interface Props {
    title: string
}

const { title } = Astro.props
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <NavigationBar>
            <Logo slot="Logo" text="Saffron Murray-Browne" />
            <NavItem slot="NavItem" href="/" text="Portfolio" />
            <NavItem slot="NavItem" href="/about" text="About" />
            <NavItem slot="NavItem" href="/shop" text="Shop" />
        </NavigationBar>
        <slot />
    </body>
</html>

<style is:global>
    window {
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    html {
        width: 100%;
        height: 100%;
        /* box-sizing: content-box; */
        margin: 0;
        padding: 0;
    }
    /* html > * {
        box-sizing: border-box;
    } */
    body {
        width: 100%;
        box-sizing: border-box;
        height: 100%;
        margin: 0;
        padding: 32px 48px;
        overflow: hidden;
        font-family: Arial;
    }

    /* My CSS */

    .link-btn {
        text-decoration: none;
        position: absolute;
        z-index: 1;
        font-family: "Merienda", cursive;
        font-size: 4rem;
        color: black;
    }

    .first-btn {
        left: 4%;
        top: 25%;
        font-family: "Merienda", cursive;
        font-size: 4rem;
        color: black;
        text-shadow: -1px 1px #000000;
        -webkit-text-stroke: 1px black;
    }

    .first-btn:hover {
        text-shadow: -2px 1px #000000;
    }

    .second-btn {
        top: 50%;
        left: 11%;
        text-shadow: -1px 1px #000000;
        -webkit-text-stroke: 1px black;
    }

    .second-btn:hover {
        text-shadow: -2px 1px #000000;
    }

    .third-btn {
        top: 71%;
        left: 24%;
        text-shadow: -1px 1px #000000;
        -webkit-text-stroke: 1px black;
    }

    .third-btn:hover {
        text-shadow: -2px 1px #000000;
    }

    .fourth-btn {
        margin: 0;
        padding: 0;
        bottom: 0;
        left: 50%;
        text-shadow: -1px 1px #000000;
        -webkit-text-stroke: 1px black;
    }

    .fourth-btn:hover {
        text-shadow: -2px 1px #000000;
    }

    /* Original Code */

    .tran {
        transition: all 0.1s ease-in-out;
        animation-fill-mode: both;
    }

    .shadow {
        /* -webkit-box-shadow: 0px 1px 1px 0px rgba(0, 0, 102, 0.2); */
    }

    .canvas {
        width: 100vw;
        padding-bottom: 100vh;
    }

    .place {
        position: absolute;
        width: 100vw;
        animation-timing-function: ease-out;
    }

    .c1 {
        animation-name: anic1;
        animation-duration: 0.2s;
        padding-bottom: 41vh;
    }

    .c2 {
        animation-name: anic2;
        animation-duration: 0.3s;
        padding-bottom: 67vh;
    }

    .c3 {
        animation-name: anic3;
        animation-duration: 0.5s;
        padding-bottom: 85vh;
    }

    .c4 {
        animation-name: anic4;
        animation-duration: 0.1s;
        padding-bottom: 100vh;
    }

    .place span {
        letter-spacing: 1px;
        cursor: pointer;
        position: absolute;
        bottom: 0;
        color: white;
        opacity: 0;
        text-transform: uppercase;
        background-color: rgba(0, 0, 0, 0.1);
        padding: 3px 6px 3px 6px;
        border-radius: 0px 3px 0px 0px;
    }

    .place:hover span {
        opacity: 1;
    }

    .place span:hover {
        background-color: rgba(0, 0, 0, 0.4);
    }

    .place span:active {
        background-color: rgba(0, 0, 0, 0.6);
    }

    .logo {
        position: absolute;
        height: 26px;
        right: 10px;
        top: 0px;
        z-index: 5;
        background-color: white;
        color: black;
        padding: 3px 20px 10px 20px;
        border-radius: 0px 0px 50px 50px;
        animation-name: logo;
        animation-duration: 0.5s;
        animation-delay: 0.5s;
    }

    .logo:hover {
        padding-top: 30px;
    }

    @keyframes anic1 {
        0% {
            padding-bottom: 0vh;
            opacity: 0;
        }
    }

    @keyframes anic2 {
        0% {
            padding-bottom: 41vh;
            opacity: 0;
        }
    }

    @keyframes anic3 {
        0% {
            padding-bottom: 67vh;
            opacity: 0;
        }
    }

    @keyframes anic4 {
        0% {
            opacity: 0;
        }
    }

    @keyframes logo {
        from {
            top: -50px;
            opacity: 0;
        }
    }

    .tip {
        background-color: rgba(0, 0, 0, 0.3);
        padding: 10px 0;
        width: 100px;
        text-align: center;
        left: 0;
        right: 0;
        margin: auto;
        top: 50vh;
        position: absolute;
        border-radius: 4px;
        z-index: 100;
        color: white;
        font-size: 20px;
        animation-name: tip;
        animation-duration: 2s;
        animation-fill-mode: both;
    }

    @keyframes tip {
        0% {
            transform: translateY(20px);
            opacity: 0;
        }

        10% {
            transform: translateY(0px);
            opacity: 1;
        }

        90% {
            transform: translateY(0px);
            opacity: 1;
        }

        100% {
            transform: translateY(-20px);
            opacity: 0;
        }
    }
</style>
